{
  "name": "reactjs-boilerplate",
  "version": "0.0.1",
  "description": "A ReactJs BoilerPlate",
  "scripts": {
    "start": "webpack-dev-server",
    "wbundle": "webpack",
    "autofix:html": "eslint . --ext html --fix --config=.eslintrc.json",
    "autofix:md": "eslint . --ext md --fix --config=.eslintrc.json && remark . -qfo --rc-path=.remarkrc",
    "autofix:eslint": "eslint . --fix --config=.eslintrc.json  && standard --fix",
    "autofix": "npm-run-all --parallel autofix:*",
    "test": "npm-run-all test:lint",
    "test:lint": "npm-run-all --parallel test:lint:*",
    "test:lint:js": "eslint . --config=.eslintrc.json",
    "test:lint:md": "remark -qf . && eslint . --ext md --config=.eslintrc.json",
    "test:lint:html": "eslint . --ext html --config=.eslintrc.json",
    "test:lint:lockfile": "lockfile-lint --allowed-hosts npm github.com --validate-https --type npm --path package-lock.json"
  },
  "author": "Saulo Nunes",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^8.2.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "browser-sync": "^2.26.7",
    "browser-sync-webpack-plugin": "^2.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-markdown": "^1.0.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "lockfile-lint": "^3.0.4",
    "npm-run-all": "^4.1.5",
    "remark-cli": "^7.0.1",
    "remark-frontmatter": "^1.3.2",
    "remark-lint": "^6.0.5",
    "remark-preset-lint-node": "^1.11.0",
    "standard": "^14.3.1",
    "webpack": "^4.41.4",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run test:lint:js",
      "git add"
    ],
    "*.{md}": [
      "npm run test:lint:md",
      "git add"
    ],
    "*.{html}": [
      "npm run test:lint:html",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "standard": {
    "ignore": [
      "/dist/"
    ]
  }
}
